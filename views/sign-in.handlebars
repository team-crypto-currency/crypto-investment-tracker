{{> header}}
<h1>Sign In</h1>

<div>
    <form class="sign-in">

        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="searchFld py-2 rounded" id="email-input" placeholder="Email">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="searchFld py-2 rounded" id="password-input" placeholder="Password">
        </div>

        <button type="submit" class="sign-in">Sign In</button>

    </form>

    <h4>Don't have an account yet?</h4>
    <a href="/signup"><span><button>Sign Up</button></span></a>

</div>

{{>footer}}